<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxWidth="200dp"
    android:layout_margin="@dimen/margin_4"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingVertical="@dimen/padding_2"
            android:id="@+id/tv_type"
            android:layout_margin="@dimen/margin_0"
            style="@style/TextViewSecondaryText"
            tools:text="Lawnmower Dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_6"
            android:gravity="center" />


        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewTitle"
            android:paddingVertical="@dimen/padding_4"
            tools:text="Lawnmower Dog"
            android:padding="@dimen/padding_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_5" />

        <TextView
            android:id="@+id/tv_dimension"
            style="@style/TextViewSecondaryText"
            tools:text="Lawnmower Dog"
            android:paddingVertical="@dimen/padding_2"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginVertical="@dimen/margin_6"
            android:gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
