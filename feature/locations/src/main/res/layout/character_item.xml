<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_3"
        android:contentDescription="@string/avatar"
        android:maxWidth="120dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/padding_2"
        android:textColor="@color/white"
        tools:text="Alive" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        style="@style/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginVertical="@dimen/margin_1"
        tools:text="Rick and morty" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_species"
        style="@style/TextViewSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        tools:text="Species: Human" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gender"
        style="@style/TextViewSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/margin_1"
        tools:text="Gender: Male" />


</LinearLayout>
