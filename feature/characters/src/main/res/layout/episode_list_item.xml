<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_1"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="@dimen/margin_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_weight="1"
            style="@style/TextViewTitle"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:textSize="@dimen/text_size_3"
            tools:text="Lawnmower Dog" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_episode"
                android:layout_gravity="center"
                style="@style/TextViewSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/margin_2"
                android:textSize="@dimen/text_size_2"
                tools:text="Lawnmower Dog" />

            <TextView
                android:id="@+id/tv_air_date"
                style="@style/TextViewSecondaryText"
                android:layout_gravity="center"
                android:padding="@dimen/padding_2"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_2"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/margin_2"
                android:paddingBottom="@dimen/padding_2"
                tools:text="Lawnmower Dog" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


